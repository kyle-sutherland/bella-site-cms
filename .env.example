# Server Configuration
HOST=0.0.0.0
PORT=1337

# Application URL (update with your domain or IP)
# Example: https://yourdomain.com or http://your-oracle-vm-ip:1337
APP_URL=http://localhost:1337

# Security Keys - MUST CHANGE FOR PRODUCTION!
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
APP_KEYS="toBeModified1,toBeModified2,toBeModified3,toBeModified4"
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified

# Database Configuration
# For development (SQLite - not recommended for production)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# For production (PostgreSQL on Oracle Cloud)
# Uncomment and configure these for production deployment:
# DATABASE_CLIENT=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=your_secure_password
# DATABASE_SSL=false
# DATABASE_SCHEMA=public

# Or use a connection string (alternative to individual credentials):
# DATABASE_URL=postgresql://username:password@host:port/database

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# Admin Panel Configuration
# Set to true in production if using HTTPS
# ADMIN_PANEL_FORCE_SSL=false

# Optional: Cloudflare/CDN Configuration
# NODE_ENV=production

# Optional: Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_DURATION=60000

# Optional: Webhooks
WEBHOOKS_POPULATE_RELATIONS=false

# Optional: Feature Flags
FLAG_NPS=true
FLAG_PROMOTE_EE=true
